{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5435;Database=configdb;Username=test;Password=test"
  },
  "JwtSettings": {
    "SecretKey": "DevelopmentSecretKey-32-Characters-Long!",
    "Issuer": "ConfigurationManagement",
    "Audience": "ConfigurationManagement.Api",
    "ExpirationMinutes": 1440
  },
  "SignalR": {
    "EnableDetailedErrors": true,
    "HubOptions": {
      "EnableDetailedErrors": true
    }
  },
  "ResponseCompression": {
    "EnableForHttps": true,
    "Providers": [
      {
        "Provider": "Brotli"
      },
      {
        "Provider": "Gzip"
      }
    ]
  },
  "HealthChecks": {
    "Enabled": true
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console"],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] [{SourceContext}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithProperty"],
    "Properties": {
      "Application": "ConfigurationManagement.Api"
    }
  }
}
